= render 'layouts/parts/sidebar'

.main-content
  .main-content__header
    .main-content__header__info
      %h2 sampleグループ
      %p member: keisuke
    = link_to new_chat_group_path, class:'main-content__header__button' do
      %p Edit
  .main-content__chat-area
    .main-content__chat-area__message
      .main-content__chat-area__message__info.clearfix
        %h3 keisuke
        %p 2017/10/16
      .main-content__chat-area__message__text
        %p hello
    .main-content__chat-area__message
      .main-content__chat-area__message__info.clearfix
        %h3 keisuke
        %p 2017/10/16
      .main-content__chat-area__message__text
        %p hello2
    .main-content__chat-area__message
      .main-content__chat-area__message__info.clearfix
        %h3 keisuke
        %p 2017/10/16
      .main-content__chat-area__message__text
        %p hello3
  .main-content__send-box
    = form_for [@chat_group, @message] do |f|
      = f.text_area :body, placeholder: 'メッセージを入力してください', class: 'main-content__send-box__text-area'
      .main-content__send-box__image
        = f.label :image, class:'main-content__send-box__image' do
          %i.fa.fa-picture-o
        = f.file_field :image, style: 'display: none;'
      = f.submit 'Send', class: 'main-content__send-box__button'
